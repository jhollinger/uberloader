#!/usr/bin/env bash

set -euo pipefail

cd $(dirname $0)/../
source bin/lib.sh

if [[ ! -d ${COMPAT_CACHE_DIR}/main ]]; then
  git worktree add ${COMPAT_CACHE_DIR}/main main
fi

# Update
cd ${COMPAT_CACHE_DIR}/main
git reset --hard HEAD
git switch main
git pull --rebase origin main

# Run tests
exec bin/update-version-test-table
